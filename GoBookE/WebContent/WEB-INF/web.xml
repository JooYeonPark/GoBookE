<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Model2WebStudy</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>kr.or.gobooke.common.web.ServletContextLoadListener</listener-class>
  </listener>
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>kr.or.gobooke.common.web.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginCheckFilter</filter-name>
    <filter-class>kr.or.gobooke.common.web.LoginCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginCheckFilter</filter-name>
    <url-pattern>/user/list.do</url-pattern>
  </filter-mapping>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error/error_500.jsp</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/error/error_400.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error/error_404.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>frontController</servlet-name>
    <servlet-class>kr.or.gobooke.common.controller.SimpleFrontControllerServlet_V4</servlet-class>
    <init-param>
      <param-name>controllerMapperLocation</param-name>
      <param-value>C:\Users\kosta\Documents\GoBookE\GoBookE\WebContent\WEB-INF\controller-mapper.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>frontController</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
</web-app>